{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "rootDir": "src/",
    "target": "es5",
    "declaration": true
  },
  "exclude": [
    "dist/**",
    "node_modules/**"
  ],
  "rules": {
    "array-type": [true, "generic"],
    "max-line-length": [true, 150],
    "no-bitwise": false,
    "variable-name": false
  }
}
